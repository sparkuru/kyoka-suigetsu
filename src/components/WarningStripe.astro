---
interface Props {
  position?: 'top' | 'bottom';
}

const { position = 'top' } = Astro.props;
---

<div class={`warning-stripe warning-stripe-${position}`}></div>

<style>
  .warning-stripe {
    background: repeating-linear-gradient(
      45deg,
      #000000,
      #000000 25px,
      #ff0000 25px,
      #ff0000 50px
    );
    height: 20px;
    width: 100%;
    position: fixed;
    left: 0;
    z-index: 9998;
  }

  .warning-stripe-top {
    top: 0;
  }

  .warning-stripe-bottom {
    bottom: 0;
  }
</style>
