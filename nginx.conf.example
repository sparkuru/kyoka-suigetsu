map $cookie_has_visited $landing_redirect {
    default 1;
    "true"  0;
}

server {
    listen 80;
    server_name yourdomain.com;
    root /var/www/dist;
    index index.html;

    location = /landing.html {
        try_files /landing.html =404;
        add_header Set-Cookie "has_visited=true; Path=/; Max-Age=31536000; HttpOnly; SameSite=Strict";
    }

    location ^~ /_astro/ {
        expires 2h;
        add_header Cache-Control "public, immutable";
    }

    location = / {
        if ($http_user_agent ~* "Googlebot|bingbot|Baiduspider|Yandex|DuckDuckBot") {
            rewrite ^ /index.html last;
        }

        if ($landing_redirect = 1) {
            rewrite ^ /landing.html last;
        }

        try_files /index.html =404;
    }

    error_page 404 /index.html;
}
