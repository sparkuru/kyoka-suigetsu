map $cookie_has_visited $nerv_redirect {
    default 1;
    "true"  0;
}

server {
    listen 80;
    server_name yourdomain.com;
    root /var/www/dist;
    index index.html;

    location = /nerv.html {
        try_files /nerv.html =404;
        add_header Set-Cookie "has_visited=true; Path=/; Max-Age=7200; HttpOnly; SameSite=Strict";
    }

    location = /dos.html {
        try_files /dos.html =404;
    }

    location ^~ /_astro/ {
        expires 2h;
        add_header Cache-Control "public, immutable";
    }

    location = / {
        if ($http_user_agent ~* "Googlebot|bingbot|Baiduspider|Yandex|DuckDuckBot") {
            rewrite ^ /index.html last;
        }

        if ($nerv_redirect = 1) {
            rewrite ^ /nerv.html last;
        }

        try_files /index.html =404;
    }

    error_page 404 /404.html;
}
